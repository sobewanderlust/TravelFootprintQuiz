<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#DCE775</item> <!-- color of app bar -->
        <item name="colorPrimaryDark">#CDDC39</item> <!-- Color of status bar -->
        <item name="colorButtonNormal">#F0F4C3</item> <!-- Background color of buttons in the app -->
    </style>

    <!-- Style start screen -->
    <style name="StyleStartScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_marginLeft">@dimen/margin16dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">0.75</item>
    </style>

</resources>
